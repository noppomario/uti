{
  "name": "uti-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo task runner for uti project",
  "scripts": {
    "frontend:format": "cd app && bun run check:fix",
    "frontend:lint": "cd app && bun run check",
    "frontend:typecheck": "cd app && bun run type-check",
    "frontend:build": "cd app && bun run build",
    "frontend:test": "cd app && bun test",
    "frontend:all": "npm-run-all frontend:format frontend:lint frontend:typecheck frontend:build frontend:test",
    "tauri:format": "cd app/src-tauri && cargo fmt",
    "tauri:lint": "cd app/src-tauri && cargo fmt --check && cargo clippy --all-targets",
    "tauri:build": "cd app && bun run tauri:build",
    "tauri:test": "cd app/src-tauri && cargo test",
    "tauri:all": "npm-run-all tauri:format tauri:lint tauri:build tauri:test",
    "daemon:format": "cd daemon && cargo fmt",
    "daemon:lint": "cd daemon && cargo fmt --check && cargo clippy --all-targets",
    "daemon:build": "cd daemon && cargo build --release",
    "daemon:test": "cd daemon && cargo test",
    "daemon:all": "npm-run-all daemon:format daemon:lint daemon:build daemon:test",
    "app:format": "npm-run-all --parallel frontend:format tauri:format",
    "app:lint": "npm-run-all --parallel frontend:lint tauri:lint",
    "app:typecheck": "npm run frontend:typecheck",
    "app:build": "npm-run-all --parallel frontend:build tauri:build",
    "app:test": "npm-run-all --parallel frontend:test tauri:test",
    "app:all": "npm-run-all app:format app:lint app:typecheck app:build app:test",
    "rust:format": "cargo fmt --all",
    "rust:lint": "cargo fmt --all --check && cargo clippy --workspace --all-targets",
    "rust:build": "cargo build --workspace --release",
    "rust:test": "cargo test --workspace",
    "rust:all": "npm-run-all rust:format rust:lint rust:build rust:test",
    "all:format": "npm-run-all --parallel frontend:format rust:format",
    "all:lint": "npm-run-all --parallel frontend:lint rust:lint",
    "all:typecheck": "npm run frontend:typecheck",
    "all:build": "npm-run-all --parallel frontend:build daemon:build tauri:build",
    "all:test": "npm-run-all --parallel frontend:test rust:test",
    "all:all": "npm-run-all all:format all:lint all:typecheck all:build all:test",
    "ci:check": "npm-run-all --parallel all:lint all:typecheck",
    "ci:build": "npm run all:build",
    "ci:local": "npm-run-all ci:check ci:build",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "npm-run-all": "^4.1.5"
  },
  "lint-staged": {
    "app/src/**/*.{ts,tsx}": "sh -c 'cd app && bunx --bun @biomejs/biome check --write \"$@\"' --",
    "app/src-tauri/src/**/*.rs": "sh -c 'cargo fmt --manifest-path app/src-tauri/Cargo.toml' --",
    "daemon/src/**/*.rs": "sh -c 'cargo fmt --manifest-path daemon/Cargo.toml' --"
  }
}

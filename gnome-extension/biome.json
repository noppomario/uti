{
    "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
    "vcs": {
        "enabled": false
    },
    "files": {
        "includes": ["**/*.js"]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 100
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "noForEach": "off",
                "useLiteralKeys": "off"
            },
            "style": {
                "noNonNullAssertion": "off",
                "useImportType": "off",
                "noParameterAssign": "off"
            },
            "suspicious": {
                "noExplicitAny": "off"
            },
            "correctness": {
                "noUnusedVariables": "warn"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "trailingCommas": "es5",
            "semicolons": "always",
            "arrowParentheses": "asNeeded",
            "bracketSpacing": true
        },
        "globals": ["global", "imports", "console"]
    }
}
